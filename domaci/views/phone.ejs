<html lang="en" dir="ltr">
    <head>
        <title><%=name%> | Domaci</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <style>
        .rejting{
            position: absolute;
            top: auto;
            left: auto;
            transform: translate(auto,auto);
            transform: rotateY(180deg);
            display: flex;
            margin-bottom: 50px;
        }

        .rejting input{
            display: none;
        }

        .rejting label{
            display: block;
            cursor: pointer;
            width: 50px;
            /*background: #ccc;*/
        }

        .rejting label:before{
            content: '\f005';
            font-family: fontAwesome;
            position: relative;
            display: block;
            font-size: 30px;
            color: #101010;
        }

        .rejting label:after{
            content: '\f005';
            font-family: fontAwesome;
            position: absolute;
            display: block;
            font-size: 30px;
            color: #1f9cff;
            top: 0;
            opacity: 0;
            transition: .5s;
            text-shadow: 0 2px 5px rgba(0,0,0,.5);
        }
        .rejting label:hover:after,
        .rejting label:hover ~ label:after,
        .rejting input:checked ~ label:after{
            opacity: 1;
        }

        .hidden{
            display: none; 
        }
        </style>
    </head>
    <body>

        <a href="/go-back"><=Go Back</a>

        <h1><%=name%></h1>

        <p><%=paragraph%></p>
        <br>
        <iframe width="560" height="315" src="<%=video%>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <br>

        <h2>Specifikacije</h2>
        <div class="specs">
            <div class="disp">
                <h3>Displej</h3>
                <aside>
                    <ul>
                        <% for(spec in specs_display){ %>
                            <li><%=specs_display[spec]%></li>
                        <%}%>
                    </ul>
                </aside>
            </div>
            <div class="disp">
                <h3>Platforma</h3>
                <aside>
                    <ul>
                        <% for(spec in specs_plat){ %>
                            <li><%=specs_plat[spec]%></li>
                        <%}%>
                    </ul>
                </aside>
            </div>
            <div class="disp">
                <h3>Memorija</h3>
                <aside>
                    <ul>
                        <% for(spec in specs_mem){ %>
                            <li><%=specs_mem[spec]%></li>
                        <%}%>
                    </ul>
                </aside>
            </div>
            <div class="disp">
                <h3>Kamera</h3>
                <aside>
                    <ul>
                        <% for(spec in specs_cam){ %>
                            <li><%=specs_cam[spec]%></li>
                        <%}%>
                    </ul>
                </aside>
            </div>
            <div class="disp">
                <h3>Baterija</h3>
                <aside>
                    <ul>
                        <% for(spec in specs_battery){ %>
                            <li><%=specs_battery[spec]%></li>
                        <%}%>
                    </ul>
                </aside>
            </div>
        </div>

        <h2>Komentari</h2>

        <div class="iskustva">
            <% for (c in comments) { %>
                <div class="komentar">
                    <h4>Ime</h4>
                    <p><%=comments[c].name%></p>
                    <h4>Komentar</h4>
                    <p><%=comments[c].comment%></p>
                    <h4>Ocena</h4>
                    <p><%=comments[c].grade%></p>
                    <h4>Broj Lajkova</h4>
                    <p><%=comments[c].likes%></p>
                    <h4>Broj dislajkova</h4>
                    <p><%=comments[c].dislikes%></p>

                    <td><form action="/like/<%=comments[c].id%>/<%=phoneID%>" method="post">
                        <input type="submit" value="Like">
                    </form></td>
                    <td><form action="/dislike/<%=comments[c].id%>/<%=phoneID%>" method="post">
                        <input type="submit" value="Dislike">
                    </form></td>

                    <div class="odgovori">
                        <h4>Odgovor na komentar</h4>
                        <%for(o in comments[c].replies){ %>
                            <div class="odgovor">
                                <p>Ime</p>
                                <p><%=comments[c].replies[o].name%></p>
                                <p>Odgovor</p>
                                <p><%=comments[c].replies[o].comment%></p>
                            </div>
                        <%}%>

                        <form action="/reply/<%=comments[c].id%>/<%=phoneID%>" method="post">
                            <p>Ime</p>
                            <input type = "text" name="replyName" required>
                            <p>Komentar</p>
                            <input type = "text" name="replyComment" required>
                            <br>
                            <input type="submit" value="Reply">
                        </form>
                    </div>
                </div>
            <%} %>
        </div>

        <h3>Dodaj komentar</h3>
        <form action="/new-comment/<%=phoneID%>" method="post">
            <p>Ime</p>
            <input type = "text" name="name" required>
            <p>Komentar</p>
            <input type = "text" name="comment" required>
            <p>Ocena</p>

            <div  class="rejting">
                <input type="radio" name="star" value=5 id="star1"><label for="star1">
                </label>
                <input type="radio" name="star" value=4 id="star2"><label for="star2">
                </label>
                <input type="radio" name="star" value=3 id="star3"><label for="star3">
                </label>
                <input type="radio" name="star" value=2 id="star4"><label for="star4">
                </label>
                <input type="radio" name="star" value=1 id="star5"><label for="star5">
                </label>
            </div>
            <br>
            <br>
            <input type="submit">
        </form>
        <h2>Prosecna ocena: <%=average%></h2>

    </body>
</html>