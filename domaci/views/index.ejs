<html lang="en" dir="ltr">
    <head>
        <title>Domaci</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta>
        <style>
            body{
                width: 99%;
                height: auto;
                background-color: #1A1A1D;
            }
            .box{
                text-align: center;
                margin-bottom: 10px;
            }
            .logo{
                position: relative;
                color: white;
                text-shadow: 0 0 50px #0f0,
                             0 0 100px #0f0,
                             0 0 150px #0f0,
                             0 0 200px #0f0,
                             0 0 250px #0f0;
                animation: animate 5s linear infinite;
            }
            
            .phone{
                text-align: center;
                border-radius: 20px;
                background-color: #4e4e50;
                padding: 20px;
                color: #ce5d8a;
                margin-bottom: 10px;
                position: relative;
                border-left: 6px solid #950740;
                border-right: 6px solid #950740;
            }
            .phone a{
                border-radius: 25px;
                background-color: #950740;
                transition: 0.3s;
                padding:15px;
                color: silver;
            }
            .phone a:hover{
                text-shadow: 0 0 50px #0f0,
                             0 0 100px #0f0,
                             0 0 150px #0f0,
                             0 0 200px #0f0,
                             0 0 250px #0f0;
                animation: animate 5s linear infinite;
            }
            @keyframes animate{
                0%{
                    filter: hue-rotate(0deg);
                }
                100%{
                    filter: hue-rotate(360deg);
                }
            }
        </style>

    </head>

    <body>
    
        <div class="box">
            <h1 class="logo">Recenzija Telefona</h1>
        </div>     

        <br>
        <div>
            <% for(i of ids){ %>
                <div class="phone">
                    <h2>Recenzija</h2>
                    <a href="/<%=i.id%>/phone"><%=i.name%></a>
                    <br>
                </div>
            <%} %>
            
        </div>
        
    </body>
</html>